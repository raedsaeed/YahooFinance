<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_quote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/iv_item_quote_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:padding="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Quote Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/iv_item_quote_shortname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="@id/iv_item_quote_title"
        app:layout_constraintTop_toBottomOf="@id/iv_item_quote_title"
        tools:text="Short name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/iv_item_quote_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_4"
        android:padding="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_quote_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_item_quote_title"
        tools:text="Exchange" />

</androidx.constraintlayout.widget.ConstraintLayout>